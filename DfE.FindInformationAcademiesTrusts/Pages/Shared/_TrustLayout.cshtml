@{
  Layout = "_Layout";
}

@section TrustBanner {
  <aside class="app-banner">
    <div class="dfe-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">
          <h2 class="govuk-heading-l app-banner--heading govuk-!-margin-bottom-3">@Model.Trust.Name</h2>
          <p class="govuk-body app-banner--body govuk-!-margin-bottom-0">@Model.Trust.Type</p>
        </div>
      </div>
    </div>
  </aside>
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
    <partial name="_TrustNavigation" model="@Model"/>
  </div>
  <div class="govuk-grid-column-three-quarters">
    @RenderBody()
  </div>
</div>
@await RenderSectionAsync("Scripts", false)

@if (CookiesHelper.ShowCookieBanner(Context, TempData))
{
  <section class="govuk-cookie-banner" data-nosnippet
           aria-label="Cookies on Find information about schools and trusts">
    <div class="govuk-cookie-banner__message govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h2 class="govuk-cookie-banner__heading govuk-heading-m">Cookies on Find information about schools and
            trusts</h2>
          <div class="govuk-cookie-banner__content">
            <p class="govuk-body">We use some essential cookies to make this service work.</p>
            <p class="govuk-body">We&rsquo;d also like to use analytics cookies so we can understand how you use the
              service and make improvements.</p>
          </div>
        </div>
      </div>
      <div class="govuk-button-group">
        <form method="post">
          <button class="govuk-button govuk-!-margin-bottom-2" type="submit"
                  asp-page="/cookies" asp-page-handler="FromBanner"
                  asp-route-consent="true" asp-route-returnPath="@CookiesHelper.ReturnPath(Context)"
                  data-testid="banner-accept-analytics-cookies-button">
            Accept analytics cookies
          </button>
          <button class="govuk-button govuk-!-margin-bottom-2" type="submit"
                  asp-page="/cookies" asp-page-handler="FromBanner"
                  asp-route-consent="false" asp-route-returnPath="@CookiesHelper.ReturnPath(Context)"
                  data-testid="banner-reject-analytics-cookies-button">
            Reject analytics cookies
          </button>
        </form>
        <a class="govuk-link" asp-page="/cookies" asp-route-returnPath="@CookiesHelper.ReturnPath(Context)"
           data-testid="banner-view-cookies">View cookies</a>
      </div>
    </div>
  </section>
}

@if (TempData[CookiesHelper.CookieChangedTempDataName] is not null)
{
  <section class="govuk-cookie-banner" data-nosnippet
           aria-label="Cookies on Find information about academies and trusts">
    <div class="govuk-cookie-banner__message govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <div class="govuk-cookie-banner__content">
            <p class="govuk-body">
              You&rsquo;ve @(TempData[CookiesHelper.DeleteCookieTempDataName] is null ? "accepted" : "rejected") additional
              cookies. You can
              <a class="govuk-link" asp-page="/cookies"
                 asp-route-returnPath="@CookiesHelper.ReturnPath(Context)">change your cookie settings
              </a> at any time.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
}

@if (!Context.Session.Keys.Contains("CookieStatus"))
{
  Context.Response.Cookies.Delete("ai_session", new CookieOptions { Path = "/", Secure = true, HttpOnly = true });
  Context.Response.Cookies.Delete("ai_user", new CookieOptions { Path = "/", Secure = true, HttpOnly = true });
  <div data-test="cookie-banner" class="app-cookie-banner" id="appCookieBanner" aria-label="cookie banner">
    <div class="govuk-width-container">
      <div class="app-cookie-banner__container" id="cookieActionsContainer">
        <p class="govuk-body">
          We use cookies to
          <a class="govuk-link" data-test="cookie-banner-link-1" asp-page="/Cookies">collect information</a>
          about how you use the <a class="govuk-link" asp-page="/Index" data-test="cookie-banner-conversion-link">Find information about academies and trusts</a> part of our service.
        </p>
        <div>
          <a role="button" draggable="false" data-test="cookie-banner-accept" class="govuk-button govuk-!-margin-bottom-2" asp-page="/cookies" asp-route-consent="true" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
            Accept analytics cookies
          </a>
          <a role="button" draggable="false" data-test="cookie-banner-reject" class="govuk-button govuk-!-margin-bottom-2" asp-page="/cookies" asp-route-consent="false" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
            Reject analytics cookies
          </a>
          <p class="inline-message govuk-body">
            or <a class="govuk-link" data-test="cookies-page-link" asp-page="/cookies" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">set your cookie preferences</a>
          </p>
        </div>
      </div>
    </div>
  </div>
}

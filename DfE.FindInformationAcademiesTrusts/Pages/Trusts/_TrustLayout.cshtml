@model DfE.FindInformationAcademiesTrusts.Pages.Trusts.ITrustsAreaModel

@{
  Layout = "_Layout";
  ViewData["Title"] = $"{ViewData["Heading"]} - {Model.Trust.Name}";
}

<aside class="app-banner" data-testid="app-trust-header">
  <div class="dfe-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-three-quarters">
        <h2 class="govuk-heading-l app-banner--heading govuk-!-margin-bottom-3">@Model.Trust.Name</h2>
        <p class="govuk-body app-banner--body govuk-!-margin-bottom-0">@Model.Trust.Type</p>
      </div>
    </div>
  </div>
</aside>

<div class="govuk-main-wrapper">
  <div class="dfe-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-quarter">
        <partial name="_TrustNavigation" model="@Model"/>
      </div>
      <div class="govuk-grid-column-three-quarters">
        <main id="main-content" role="main">
          <header>
            <span class="govuk-caption-m">@ViewData["Section"]</span>
            <h1 class="govuk-heading-l">@ViewData["Heading"]</h1>
          </header>
          @RenderBody()
        </main>
      </div>
    </div>
  </div>
</div>

@await RenderSectionAsync("Scripts", false)
